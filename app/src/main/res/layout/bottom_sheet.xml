<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rounded_background">

    <LinearLayout
        android:id="@+id/mainText"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/btnAnulate"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anuluj"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dodaj miasto"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="55dp"/>

    </LinearLayout>



        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableStart="@drawable/search"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/greyText"
            android:layout_marginHorizontal="15dp"
            android:layout_alignTop="@+id/mainText"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:hint="Szukaj"
            android:maxLines="1"
            android:background="@drawable/rounden_edit_text"/>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerViewResults"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/layoutPopularCities"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:text="Najbardziej popularne miasta"
            android:textColor="@color/greyText"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnCurrentLocation"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="12sp"
                android:text="Aktualnie"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/pin"
                android:layout_marginLeft="15dp"
                android:backgroundTint="@color/greyTransparent2"/>

            <Button
                android:id="@+id/warszawa"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Warszawa"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/greyTransparent2"/>

            <Button
                android:id="@+id/krakow"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Kraków"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/greyTransparent2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/wroclaw"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="12sp"
                android:text="Wrocław"
                android:textColor="@color/white"
                android:layout_marginLeft="15dp"
                android:backgroundTint="@color/greyTransparent2"/>

            <Button
                android:id="@+id/gdansk"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Gdańsk"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/greyTransparent2"/>

            <Button
                android:id="@+id/lublin"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Lublin"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/greyTransparent2"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:text="Najbardziej popularne miasta - świat"
                android:textColor="@color/greyText"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/newyork"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="Nowy York"
                    android:layout_marginLeft="15dp"
                    android:backgroundTint="@color/greyTransparent2"/>

                <Button
                    android:id="@+id/paryz"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Paryż"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/greyTransparent2"/>

                <Button
                    android:id="@+id/londyn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Londyn"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/greyTransparent2"/>

                <Button
                    android:id="@+id/pekin"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Pekin"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/greyTransparent2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/tokio"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="Tokio"
                    android:layout_marginLeft="15dp"
                    android:backgroundTint="@color/greyTransparent2"/>

                <Button
                    android:id="@+id/rzym"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Rzym"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/greyTransparent2"/>

                <Button
                    android:id="@+id/moskwa"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Moskwa"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/greyTransparent2"/>

                <Button
                    android:id="@+id/singapur"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Singapur"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/greyTransparent2"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/dubaj"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="Dubaj"
                    android:layout_marginLeft="15dp"
                    android:backgroundTint="@color/greyTransparent2"/>

                <Button
                    android:id="@+id/sydney"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Sydney"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/greyTransparent2"/>

                <Button
                    android:id="@+id/ateny"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Ateny"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/greyTransparent2"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>


</LinearLayout>
